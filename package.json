{
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "api:install": "cd api && npm install",
    "api:start": "cd api && npm start",
    "frontend:test": "cd frontend && npm run test",
    "frontend:lint": "cd frontend && ng lint",
    "install-all": "npm-run-all --parallel frontend:install api:install",
    "start-all": "npm-run-all --parallel frontend:start api:start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
